------------------- 1 code type ---------------
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, sans-serif;
  background-color: blue;
  padding: 20px;
}

header {
  text-align: center;
  padding: 20px 0;
  background-color: #333;
  color: white;
}

header h1 {
  font-size: 2.5rem;
}

header p {
  font-size: 1.2rem;
  margin-top: 10px;
}

.editor-container {
  display: flex;
  justify-content: space-between;
  margin: 20px 0;
}

.editor {
  flex: 1;
  margin-right: 15px;
}

.editor:last-child {
  margin-right: 0;
}

.editor h3 {
  margin-bottom: 10px;
}

textarea {
  width: 100%;
  height: 200px;
  padding: 10px;
  font-size: 1rem;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button {
  display: block;
  margin: 20px auto;
  padding: 10px 20px;
  font-size: 1rem;
  color: white;
  background-color: #4CAF50;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button:hover {
  background-color: #45a049;
}

.output-container {
  margin-top: 20px;
}

#outputFrame {
  width: 100%;
  height: 300px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

footer {
  text-align: center;
  padding: 10px;
  background-color: #333;
  color: white;
  margin-top: 20px;
}

